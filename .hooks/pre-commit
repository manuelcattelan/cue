#!/bin/sh

echo "Running pre-commit checks..."

echo "Running Prettier checks with 'pnpm run format:check'..."
pnpm run format:check
if [ $? -ne 0 ]; then
  echo "ğ„‚ Prettier checks failed. Run 'pnpm run format' to fix formatting issues."
  exit 1
fi
echo "âœ“ Prettier checks passed!"

echo "Running ESLint checks with 'pnpm run lint:check'..."
pnpm run lint:check
if [ $? -ne 0 ]; then
  echo "ğ„‚ ESLint checks failed. Run 'pnpm run lint' to fix linting issues."
  exit 1
fi
echo "âœ“ ESLint check passed!"

echo "All pre-commit checks passed!"

exit 0
